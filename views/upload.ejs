    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Workpaper</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <header>
        <h1>Upload Your Workpaper</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/workpapers">Workpapers</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <input type="file" name="workpaper" accept=".pdf,.doc,.docx" required>
            <button type="submit">Upload</button>
        </form>
    </main>
</body>

